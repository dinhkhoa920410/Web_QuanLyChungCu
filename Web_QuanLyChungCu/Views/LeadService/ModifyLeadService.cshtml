    <script>tinymce.init({ selector: 'textarea' });</script>
</head>
<script>
    $(function () {
        $("#datepicker").datepicker();
    });
</script>
<h1>chỉnh sửa thông tin</h1>

@using (Html.BeginForm("LeadServiceModify", "LeadService", FormMethod.Post, new { @enctype = "multipart/form-data" }))
