@using Web_QuanLyChungCu.Models
@model IEnumerable<UserInfo>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layouts/AdminLayout.cshtml";
    WebGrid grid = new WebGrid(source: Model, rowsPerPage: 20);
}

<div>
    <h1 style="padding-bottom: 30px; "> Danh sách thông tin người dùng</h1>
    @Html.ActionLink("Thêm mới", "CreateUser", "UserInfo", new { @class = "btn btn-success", @style = "margin: 10px" })
</div>
<div class="table">
    @grid.GetHtml(
        tableStyle: "divTable",
        headerStyle: "gridHead",
        footerStyle: "gridFooter",
        rowStyle: "gridRow",
        alternatingRowStyle: "gridAltRow",
        columns: grid.Columns(grid.Column("Id", "ID"),
            grid.Column("Name", "Tên nhân viên"),
            grid.Column("Code", "Mã nhân viên"),
            grid.Column("Address", "Địa chỉ"),
            grid.Column("IdNumber", "CMND / PASSPORT "),
            grid.Column("Email", "Email"),
            grid.Column("Note", "Ghi chú"),
            grid.Column("UserName", "Tên người dùng"),
            grid.Column( format: p => @Html.ActionLink("Chỉnh Sửa","UserInfoModify", new {id= p.Id})),
            grid.Column( format: p => @Html.ActionLink("Xoá", "UserInfoDelete", new {id = p.Id }))
            ))
</div>
